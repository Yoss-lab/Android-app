<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hatem.ali.leoni"
    android:targetSandboxVersion="1"
    tools:targetApi="o">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_leoni"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity android:name=".activities.EspaceemployeActivity" android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.AfficheStageActivity" />
        <activity android:name=".activities.AfficheEmploiActivity" />
        <activity android:name=".activities.AfficheCongeActivity" />
        <activity android:name=".activities.MyCongeActivity" />
        <activity android:name=".activities.ReclamationActivity" />
        <activity android:name=".activities.CongeActivity" />
        <activity android:name=".activities.CvActivity"  />
        <activity android:name=".activities.AllUsersActivity" />
        <activity android:name=".activities.AfficheventActivity" />
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.profileActivity" />
        <activity android:name=".activities.EspacemembreActivity" android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.actualite_Activity" android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".helpers.buttonFlier" />
        <activity android:name=".activities.aboutLeoniActivity" android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.ActivityStatistique" />
        <activity android:name=".activities.EvenementActivity" />
        <activity android:name=".activities.PrixActivity" />
        <activity android:name=".activities.historique" />
        <activity android:name=".activities.ActivityInscription" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>