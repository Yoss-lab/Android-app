<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="hatem.ali.leoni.fragments.HistoriqueFragment">


        <androidx.cardview.widget.CardView

            android:id="@+id/card_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E7EDF1"
            app:cardElevation="6dp"
            app:cardMaxElevation="6dp"
            app:contentPadding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">


                <TextView
                    android:id="@+id/leoni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_black"
                    android:gravity="fill_vertical"
                    android:text="LEONI"
                    android:textColor="#004089"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/corporate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:gravity="fill_vertical"
                    android:text="depuis 40ans"
                    android:textColor="#004089"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/leoni"
                    app:layout_constraintStart_toEndOf="@id/leoni"
                    app:layout_constraintTop_toTopOf="@id/leoni"
                    app:layout_constraintVertical_bias="0.78" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp" />





</FrameLayout>